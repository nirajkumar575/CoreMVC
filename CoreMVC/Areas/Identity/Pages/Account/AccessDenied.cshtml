@page
@model Microsoft.AspNetCore.Mvc.RazorPages.PageModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient ml-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Access Denied</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-5 text-center">
        <i class="bi bi-shield-lock text-danger" style="font-size: 4rem;"></i>
        <h3 class="mt-3 text-dark">You do not have permission to view this page.</h3>
        <p class="text-muted">
            Please contact your administrator if you believe this is an error.
        </p>
        <a href="/" class="btn btn-primary mt-3">
            <i class="bi bi-house-door"></i> Back to Home
        </a>
        <a href="/Identity/Account/Login" class="btn btn-secondary mt-3">
            <i class="bi bi-box-arrow-in-right"></i> Login with another account
        </a>
    </div>
</div>
