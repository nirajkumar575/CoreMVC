@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@Localizer["Welcome"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <a class="navbar-brand" href="/">@Localizer["Home"]</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/About">@Localizer["About"]</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Contact">@Localizer["Contact"]</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="langDropdown" role="button" data-bs-toggle="dropdown">
                        🌐 @Localizer["Language"]
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="@Url.Action("SetLanguage", "Language", new { culture = "en", returnUrl = Context.Request.Path })">English</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("SetLanguage", "Language", new { culture = "hi", returnUrl = Context.Request.Path })">हिंदी</a></li>
                        <li><a class="dropdown-item" href="@Url.Action("SetLanguage", "Language", new { culture = "fr", returnUrl = Context.Request.Path })">Français</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
